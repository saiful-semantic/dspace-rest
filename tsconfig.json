{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist/cjs",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}